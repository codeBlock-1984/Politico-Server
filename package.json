  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codeBlock-1984/Politico-Server/issues"
  },
  "homepage": "https://github.com/codeBlock-1984/Politico-Server#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-core": "^6.26.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "morgan": "^1.9.1"
  },
  "env":{
    "commonJS": true,
    "node": true,
    "mocha": true
  },
  "standard": {
    "env": ["mocha"],
    "globals": [
      "describe",
