    "serve": "node dist/app.js",
    "test": "mocha --require @babel/register ./tests/*.js --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeBlock-1984/Politico-Server.git"
  },
  "keywords": [],
